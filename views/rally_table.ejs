<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Race Results</title>
    <style>
        body{
            background-color: #C7C8CC;
        }
    </style>
</head>
<body>
    <h1 class="m-4 text-dark" style="text-align: center;">Users</h1>
    <div class="d-flex justify-content-center">
        <div>
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>NO</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Section1</th>
                    <th>Section2</th>
                    <th>Section3</th>
                    <th>Average</th>
                  </tr>
                </thead>
                <tbody>
                    <% for (let i = 0 ; i < count; i++){ %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= rally[i].firstname %></td>
                            <td><%= rally[i].lastname %></td>
                            <td><%= rally[i].section1 %></td>
                            <td><%= rally[i].section2 %></td>
                            <td><%= rally[i].section3 %></td>
                            <td><%= rally[i].average %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="/admin/rally/clear-table"><button type="button" class="btn btn-danger"> Clear Table </button></a>
    </div>
</body>
</html>